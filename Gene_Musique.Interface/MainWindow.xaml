<Window x:Class="Gene_Musique.Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gene_Musique.Interface"
        mc:Ignorable="d"
        Title="Algorithme génétique By DEFRANCE Lucas et ROLLY-VACHEZ Vincent" Height="350" Width="525">
    
    <Grid>
       
        <Grid Background="AliceBlue">
            <Grid.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF8B2121" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Button x:Name="ButtonRecord" Background="LightBlue" Content="SAVE" HorizontalAlignment="Left" Margin="251,94,0,0" VerticalAlignment="Top" Width="92" Height="41" Click="ButtonRecord_Click"/>
            <Grid Margin="358,6,67,241">
                <Button x:Name="ButtonNext" Background="LightBlue" Content="NEXT" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Height="41" Click="ButtonNext_Click" Margin="11,35,-8,-0.2"/>
                <Grid Margin="0,46,-8,-14">
                    <Label x:Name="label4" Content="Chanson n°" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="labelNumberSong" Content="0" HorizontalAlignment="Left" Margin="71,0,0,0" VerticalAlignment="Top"/>
                </Grid>
            </Grid>
            <Menu IsMainMenu="True" Margin="0,0,0,296.8">
                <MenuItem Header="File" >
                    <MenuItem x:Name="open" Header="Open" Click="open_Click"/>
                    <MenuItem x:Name="save_as" Header="Save As" Click="save_as_Click"/>
                    <MenuItem Header="Quit"/>
                </MenuItem>
                <MenuItem Header="Configuratiion" />
                <MenuItem Header="?" />
            </Menu>
            <Button x:Name="ButtonPlay" Content="PLAY" HorizontalAlignment="Left" Margin="252,36,0,0" VerticalAlignment="Top" Width="92" Height="41" Background="LightBlue" Click="ButtonPlay_Click"/>

            <Grid Margin="251,61,176,234"/>
            <Grid Margin="21,97,308,162">
                <Label x:Name="labelAvis" HorizontalAlignment="Left" Margin="167,0,0,0" VerticalAlignment="Top" Content="5" Width="21"/>
                <Slider x:Name="sliderAvis" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Height="33" SmallChange="1" ValueChanged="sliderAvis_ValueChanged" Minimum="0" Maximum="10" Value="5" Margin="16,26,0,0"/>
                <Label x:Name="label_Copy4" Content="10" HorizontalAlignment="Left" Margin="160,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.783,1.41" Width="28"/>
                <Label x:Name="label_Copy" Content="0" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Margin="21,31,302,227">
                <Label x:Name="labelTempo" Content="460" HorizontalAlignment="Left" Margin="160,0,0,0" VerticalAlignment="Top" Width="34" OpacityMask="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
                <Slider x:Name="sliderTempo"      HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Height="34" SmallChange="1" ValueChanged="sliderTempo_ValueChanged" Maximum="500" Value="460" Margin="17,27,0,0"/>
                <Label x:Name="label_Copy3" Content="0" HorizontalAlignment="Left" Margin="0,23,0,0" VerticalAlignment="Top"/>
                <Label x:Name="label" Content="500" HorizontalAlignment="Left" Margin="160,26,0,0" VerticalAlignment="Top" Width="34"/>
                <Label x:Name="label1" Content="TEMPO" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Margin="21,162,311,98">
                <Label x:Name="labelLengthSound" Content="25" HorizontalAlignment="Left" Margin="157,0,0,0" VerticalAlignment="Top" Width="28"/>
                <Slider x:Name="sliderLengthNote" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Margin="16,26,0,0" Height="33" SmallChange="1" ValueChanged="sliderLengthNote_ValueChanged" Minimum="5" Maximum="80" Value="25"/>
                <Label x:Name="label_Copy1" Content="80" HorizontalAlignment="Left" Margin="157,23,0,0" VerticalAlignment="Top" Width="28" RenderTransformOrigin="0.571,0.5"/>
                <Label x:Name="label_Copy2" Content="5" HorizontalAlignment="Left" Margin="0,23,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Label x:Name="label2" Content="AVIS" HorizontalAlignment="Left" Margin="21,97,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label3" Content="LENGTH NOTE" HorizontalAlignment="Left" Margin="21,162,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.519,0.231"/>
        </Grid>
    </Grid>
</Window>
